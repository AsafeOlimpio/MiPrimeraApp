<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginactivity.LoginActivity">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/main_toolbar"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/landscape1"
        android:padding="10dp">

        <TextView
            android:id="@+id/username"
            style="@style/asafes_text_white_style"
            android:text="@string/username" />

        <EditText
            android:id="@+id/user"
            style="@style/white_input_type"
            android:layout_below="@+id/username"
            android:hint="@string/enter_username"
            android:textColorHint="@color/colorWhite"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/pass"
            style="@style/asafes_text_white_style"
            android:layout_below="@+id/user"
            android:text="@string/password" />

        <EditText
            android:id="@+id/password"
            style="@style/white_input_type"
            android:layout_below="@id/pass"
            android:hint="@string/enter_password"
            android:inputType="textPassword"
            android:textColorHint="@color/colorWhite"/>

        <Button
            android:id="@+id/login"
            style="@style/L_C_buttons"
            android:layout_below="@id/password"
            android:onClick="Login"
            android:text="@string/login" />

        <Button
            android:id="@+id/cancel"
            style="@style/L_C_buttons"
            android:layout_alignBottom="@id/login"
            android:layout_toEndOf="@+id/login"
            android:onClick="Cancel"
            android:text="@string/cancel" />

        <!--android:layout_alignParentStart="true"-->
        <Button
            android:id="@+id/register"
            style="@style/my_button"
            android:layout_alignParentBottom="true"
            android:onClick="register"
            android:text="@string/register" />

        <!--ImageView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:layout_above="@id/register"
            android:src="@drawable/mes_aniversario" /-->

    </RelativeLayout>

</RelativeLayout>